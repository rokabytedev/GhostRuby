<nav class="pagination">
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}"><span aria-hidden="true">&larr;</span> {{t 'pagination__newer_posts'}}</a>
    {{/if}}
    <span class="page-number">{{t 'pagination__page_of' page=page pages=pages}}</span>
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}">{{t 'pagination__older_posts'}} <span aria-hidden="true">&rarr;</span></a>
    {{/if}}
</nav>